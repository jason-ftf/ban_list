<div class="flex justify-end">
  <%= link_to 'Sign out',
              destroy_user_session_path,
              class: 'underline text-blue-400',
              data: { turbo_method: :delete }  %>
</div>            
<div class="my-4">
  <p>The ban list:</p>
  <% @ban_items.each do |item| %>
    <li>
      <%= item.email.present? ? item.email : item.ip %>
      <span><%= link_to "Delete", ban_item_path(item.id), class: 'text-red-800 text-sm', data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></span>
    </li>
  <% end %>
</div>
<div class="my-4">
  <%= link_to "Add to ban list",
              new_ban_item_path,
              class: 'underline text-blue-400',
              data: { turbo: false } %>
</div>

